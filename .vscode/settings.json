{
    "terminal.integrated.profiles.windows": {
        "Git Bash": {
            "source": "Git Bash",
            "args": [
                "--rcfile",
                ".bashrc"
            ],
            "icon": "terminal-bash"
        },
        "SSH (Vagrant)": {
            "source": "Git Bash",
            "args": [
                "-c",
                "./bin/vssh"
            ],
            "icon": "terminal-bash"
        }
    },
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    //
    // EDITOR
    //
    "workbench.colorTheme": "Default Dark+",
    "explorer.compactFolders": false,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    //
    // GIT
    //
    "git.confirmSync": false,
    "git.autofetch": true,
    //
    // PHP
    //
    "php.debug.executablePath": "C:/dev/lib/php/7.4.27-nts/php.exe",
    "php.debug.ideKey": "VSCODE",
    "php.format.codeStyle": "PSR-2",
    "php.problems.exclude": {
        // NOTE: For now, we are going to exclude the following paths from checking for ALL problems.  Later, we can fix
        // these issues, leave them to the individual developers, or simply leave these exclusions.
        "plugins/argentina-afip-invoices": true,
        "plugins/backup-sync-dropbox": true,
        "plugins/fio_cz": true,
        "plugins/invoice-csv-export": true,
        "plugins/mkt-queue-sync": true,
        "plugins/quickbooks-online": true,
        "plugins/revenue-report": true,
        "plugins/routeros-packet-manager": true,
        "plugins/routeros-suspension": true,
        "plugins/sms-twilio": true,
        "plugins/ucrm-client-signup": true,
        // Ignore any Plugin specific vendor folders.
        "plugins/**/vendor": true,
    },
    "php.stubs": [
        "*",
        "xdebug"
    ],
    "php.docblock.functionSnippet": {
        "@author": "${name:Ryan}"
    },
}
